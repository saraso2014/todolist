<div class="ui tiny edit task modal">
    <div class="header">
        Edit task
    </div>
    <div class="content">
        <div class="ui form">
            <%= form_for :task do |f| %>
                <label>Task Name</label>
                <%= f.text_field :name %>
                <p></p>
                <label>Due Date</label>
                <%= f.date_field :due_date %>
                    <p></p>
                    <%= f.submit "Edit", class: "ui positive button" %>
            <% end %>
        </div>
    </div>

</div>